{{!-- Modal Cart --}}
<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">
          <i class="fas fa-shopping-cart"></i>
          Order details
        </h5>
        <button autocomplete="none" type="button" class="close text-danger font-weight-bolder" data-dismiss="modal"
          aria-label="Close">
          <span aria-hidden="true">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-dash-square-fill" fill="currentColor"
              xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd"
                d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm2 7.5a.5.5 0 0 0 0 1h8a.5.5 0 0 0 0-1H4z" />
            </svg>
          </span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Item</th>
              <th scope="col">Price</th>
              <th scope="col">Quantity</th>
            </tr>
          </thead>
          <tbody>
            <!-- Dinamically add products -->
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <div class="container-fluid">
          <div class="row">
            <div class="col">
              <h4>
                <i class="fas fa-money-check"></i>
                Subtotal: <span id="total-count">0</span> â‚¬ (Incl. VAT)
              </h4>
            </div>
            <div class="col text-right">
              <button autocomplete="none" type="button" class="disabled btn btn-danger mb-2" id="empty-cart">Empty this
                cart</button>
              <button autocomplete="none" type="button" class="disabled btn btn-primary mb-2 ml-2" id="btn-purchase"
                data-dismiss="modal" data-toggle="modal">
                Purchase Now!
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
