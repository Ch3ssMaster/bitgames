<div class="container-fluid mt-5 pt-2">
    {{!-- {{#if ({{deleted.n eq 1)}} --}}
    {{#if (checkDeleted deleted)}}
    {{#if (deletedResult deleted)}}
    <div class="container-fluid mt-3 mx-3">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Successfully deleted!</strong> The product has been deleted from the database.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{else}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Ooops!</strong> Something went wrong. Try it again or contact with de administrator.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
    {{/if}}
    {{/if}}
    {{!-- {{/if}} --}}
    <div class="row d-flex justify-content-center align-items-center mt-5 mx-3 bg-white">
        <div class="col-3 text-center p-3 bg-light">
            <h5 class="bg-danger text-white rounded p-3">Filters</h5>
        </div>
        <div class="col-9 text-center">
            <div class="btn-group" role="group" aria-label="Basic example">
                <button type="button" class="btn btn-info">
                    <a href="/vendor/{{id}}?view=all" class="text-white text-decoration-none">
                        All products
                    </a>
                </button>
                <button type="button" class="btn btn-info">
                    <a href="/vendor/{{id}}?view=publisher" class="text-white text-decoration-none">
                        By vendor
                    </a>
                </button>
                <button type="button" class="btn btn-info">
                    <a href="/vendor/{{id}}?view=title" class="text-white text-decoration-none">
                        By title
                    </a>
                </button>
                <button type="button" class="btn btn-info">
                    <a href="/vendor/{{id}}?view=price" class="text-white text-decoration-none">
                        By price
                    </a>
                </button>
            </div>
        </div>
    </div>
    {{#each allGames}}
    <div class="row m-3 bg-white">
        <div class="col-lg-4 d-flex justify-content-center py-3">
            <img class="card-img w-50" src="/img/{{this._doc.img.localImg}}" alt="{{this._doc.title}}">
        </div>
        <div class="col-lg-6 p-3 bg-light border border-light">
            <h4 class="my-0 font-weight-normal mb-2">{{this._doc.title}}</h4>
            <div class="border-top w-100 mb-3"></div>
            <p><strong>Description: </strong>{{this._doc.description}}</p>
            <div class="border-top w-100 mb-3"></div>
            <h5><strong>Publisher: </strong>{{this._doc.publisher}}</h5>
            <div class="border-top w-100 mb-3"></div>
            <h5><strong>Price: </strong>{{this._doc.price}} â‚¬</h5>
        </div>
        <div class="col-lg-2 d-flex align-items-center">
            <div class="d-flex flex-column justify-content-around w-100 h-50 py-3">
                <a href="/products/{{this._doc._id}}" class="btn btn-info btn-lg btn-block" role="button"
                    aria-pressed="true">Edit</a>
                <a href="/vendor/{{../id}}?delete={{this._doc._id}}" class="btn btn-danger btn-lg btn-block"
                    role="button" aria-pressed="true">Delete</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>